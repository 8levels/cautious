<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <title>{% block title %}Admin - Cautious Films{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('bundles/admingeneratorgenerator/css/all.css') }}" type="text/css" media="all" />
            <link rel="stylesheet" href="{{ asset('/css/cms.css') }}" type="text/css" media="all" />
            <!--[if IE]>
                <link href="{{ asset('bundles/admingeneratorgenerator/css/ie.css') }}" rel="stylesheet" type="text/css" />
            <![endif]-->
        {% endblock %}
        {% block javascript_head %}
            <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.6.4/jquery.min.js"></script>
            <script>window.jQuery || document.write('<script src="{{ asset("bundles/admingeneratorgenerator/javascripts/jquery-1.6.4.min.js") }}">\x3C/script>')</script>
        {% endblock %}
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <div id="header">
            {% block header %}
                <div id="header-left">
                    {% block logo %}
                    <div class="logo">                   
                        <a href="{{ path('mba_dashboard_default_index') }}"><img src="/img/pic-logo.png" title="Cautious Films Admin" /></a>
                    </div>
                    {% endblock %}
                </div>  
                <div id="header-right">                        
                    {% block profile %}
                    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                    <div class="profile">
                        <ul>
                            <li class="header-text">
                                Welcome {{app.user.username}}
                            </li>
                            <li>
                                <a class='logout' href="{{ path('fos_user_security_logout') }}">Logout</a>
                            </li>
                        </ul>
                    </div>
                        {% endif %}
                    {% endblock %}                
                {% block menu %}
                     {{ knp_menu_render('MbaDashboardBundle:AdminMenuBuilder:adminMenu') }}
                {% endblock %}
                </div>        
            {% endblock %}
        </div>
        <div id="content">
            {% block flashes %}
                {% if app.session.flash('success') %}
                    <div class="notification_box success">
                        {{ app.session.flash('success')|raw }}
                    </div>
                {% endif %}
                {% if app.session.flash('error') %}
                    <div class="notification_box error">
                        {{ app.session.flash('error')|raw }}
                    </div>
                {% endif %}
            {% endblock %}

            {% block body %}{% endblock %}
        </div>
        {% block javascripts %}
            <script type="text/javascript" src="{{ asset('bundles/admingeneratorgenerator/javascripts/menu.js') }}"></script>
            <script type="text/javascript">
                var menu=new menu.dd("menu");
                menu.init("main_navigation","mainhover");
            </script>
        {% endblock %}
    </body>
</html>
